    script.
      function displayReminder() {
        var reminderName = document.getElementById("reminderName").value;
        var day = document.getElementById("day").value;
        var month = document.getElementById("month").value;
        var year = document.getElementById("year").value;
        var time = document.getElementById("time").value;

        var reminderBox = document.getElementById("reminderBox");
        var reminderItem = document.createElement('div');
        reminderItem.className = 'reminder-box';
        reminderItem.innerHTML = "<h2>Reminder:</h2><p>Name: " + reminderName + "</p><p>Date: " + day + "/" + month + "/" + year + "</p><p>Time: " + time + "</p>";
        reminderBox.appendChild(reminderItem);
      }

