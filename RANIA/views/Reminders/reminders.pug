      div(id="layoutSidenav_content")
        main
          .container
            h1 Set a Reminder
            form(action="/setReminder", method="post")
              .row
                .col
                  h5 Reminder Name:
                  //label(for="reminderName") Reminder Name:
                  input(type="text", name="reminderName", id="reminderName", required)
                .col
                  h5 Day (dd):
                  label(for="day") Day:
                  input(type="number", name="day", id="day", min="1", max="31", required)
              .row
                .col
                  h5 Month(mm):
                  label(for="month") Month:
                  input(type="number", name="month", id="month", min="1", max="12", required)
                .col
                  h5 Year(yyyy):
                  label(for="year") Year:
                  input(type="number", name="year", id="year", min="2022", max="2099", required)
              .row
                .col
                h5 Time(hh:mm AM/PM):
                  label(for="time") Time:
                  input(type="time", name="time", id="time", required)
              .row
                .col
                  button(type="submit") Set Reminder
