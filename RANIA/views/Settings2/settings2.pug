doctype html
html
  head
    title Settings Page
    style.
      body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f4f4f4;
        color: #333;
      }
      .container {
        max-width: 600px;
        margin: 50px auto;
        padding: 30px;
        border-radius: 10px;
        background-color: #fff;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      }
      h1 {
        text-align: center;
        margin-bottom: 30px;
        color: #007bff;
      }
      label {
        display: block;
        margin-bottom: 10px;
        font-weight: bold;
        color: #555;
      }
      input[type="range"] {
        width: 100%;
        margin-top: 5px;
      }
      input[type="color"] {
        width: 50px;
        height: 30px;
        padding: 0;
        border: none;
        border-radius: 5px;
        vertical-align: middle;
      }
      .preview-text {
        margin-top: 20px;
        font-size: 16px;
      }
      button {
        display: block;
        width: 100%;
        padding: 10px;
        margin-top: 20px;
        border: none;
        border-radius: 5px;
        background-color: #007bff;
        color: #fff;
        font-size: 16px;
        cursor: pointer;
        transition: background-color 0.3s ease;
      }
      button:hover {
        background-color: #0056b3;
      }

  body
    .container
      h1 Settings
      label(for="text-size") Text Size
      input(type="range" id="text-size" min="10" max="30" value="16" onchange="changeTextSize()")
      label(for="text-color") Text Color
      input(type="color" id="text-color" value="#333333" onchange="changeTextColor()")
      .preview-text#previewText
        | This is example text for your desriable text color. We are happy as a team to assist you in any way possible.

      button(type="button" onclick="saveSettings()") Save

  script.
    function changeTextSize() {
      var textSize = document.getElementById("text-size").value;
      document.getElementById("previewText").style.fontSize = textSize + "px";
    }

    function changeTextColor() {
      var textColor = document.getElementById("text-color").value;
      document.getElementById("previewText").style.color = textColor;
    }

    function saveSettings() {
      var textSize = document.getElementById("text-size").value;
      var textColor = document.getElementById("text-color").value;
