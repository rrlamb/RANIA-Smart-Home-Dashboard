doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title March 2024 Calendar
    style.
      body {
        background-color: #002855; /* Set background color to West Virginia Mountaineers blue */
        color: #f0f0f0; /* Set text color to a softer shade of white */
      }
      table {
        margin: 0 auto; /* Center the table */
        width: 80%; /* Set the width to fit the majority of the page */
        border-collapse: collapse;
        table-layout: fixed;
      }
      th, td {
        padding: 20px;
        text-align: center;
        width: 14.2857%; /* Set width for each day column */
        border: 1px solid #f0f0f0; /* Add border for each day cell */
      }

